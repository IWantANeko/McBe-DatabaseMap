{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": [
            "ES2021",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "removeComments": false,
        "noUnusedLocals": true,
        "outDir": "scripts",
        "emitDeclarationOnly": false,
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "scripts",
        "node_modules"
    ]
}